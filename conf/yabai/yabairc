yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

ACCENT_OPACITY=0.8

# misc
yabai -m config layout bsp
yabai -m config focus_follows_mouse off
yabai -m config mouse_follows_focus on
yabai -m config window_placement second_child
yabai -m config window_shadow float

# window spacing
SPACE_PADDING=4
SPACE_GAP=$((SPACE_PADDING*2))
yabai -m config top_padding     $SPACE_PADDING
yabai -m config bottom_padding  $SPACE_PADDING
yabai -m config left_padding    $SPACE_PADDING
yabai -m config right_padding   $SPACE_PADDING
yabai -m config window_gap      $SPACE_GAP

# window opacity
yabai -m config window_opacity on
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity "$ACCENT_OPACITY"

yabai -m config menubar_opacity "$ACCENT_OPACITY"
if [[ "$(brew services info sketchybar --json | jq -r '.[].running')" != "false" ]];
  MENUBAR_HEIGHT=24
  MENUBAR_PADDING=$((SPACE_GAP+MENUBAR_HEIGHT))
  yabai -m config external_bar all:$MENUBAR_PADDING:0 # For all displays
fi

#
# rules
yabai -m rule --add app="^System Preferences$" manage=off

borders active_color=0xff8B7EC8 inactive_color=0xff282726 width=5.0 &
