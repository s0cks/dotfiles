#!/usr/bin/env zsh
zsecrets-edit() {
  local ZPROFILE_SECRETS_FILE="$HOME/.zprofile_secrets"
  gpg --quiet -d -o "$ZPROFILE_SECRETS_FILE" "$ZPROFILE_SECRETS_FILE.gpg"
  $EDITOR "$ZPROFILE_SECRETS_FILE"
  gpg --quiet --yes -e -r "$GPG_ID" "$ZPROFILE_SECRETS_FILE"
  source "$ZPROFILE_SECRETS_FILE"
  rm "$ZPROFILE_SECRETS_FILE"
}
